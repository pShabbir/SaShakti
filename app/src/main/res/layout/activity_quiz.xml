<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/quizbg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/win"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp"
            android:background="@mipmap/win"
            android:elevation="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/loss"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp"
            android:background="@mipmap/loss"
            android:elevation="10dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scoreTextView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@mipmap/score"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="50sp" />


            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="48dp"
                android:background="@mipmap/question"

                android:gravity="center_horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="30dp"
                android:text="TextView"
                android:textColor="#ffffff"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/option2"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_alignTop="@+id/imageView4"
                android:layout_marginLeft="150dp"
                android:background="@mipmap/cloud"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="option1answer"
                android:text="TextView"
                android:textColor="#ffffff"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/option1"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/cloud"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="option1answer"
                android:text="TextView"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </LinearLayout>

    </FrameLayout>


</RelativeLayout>